root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,json,yaml,yml}]
indent_style = space
indent_size = 2

[*.{py,java,cpp,c,h,hpp}]
indent_style = space
indent_size = 4

[*.{dart}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.go]
indent_style = tab
tab_width = 4
